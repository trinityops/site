---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Stellar Pricing for Every Journey"
    subtitle="Choose the perfect plan that aligns with your cosmic goals."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Only pay for what you need"
    prices={[
      {
        title: 'Startup Launch',
        subtitle: 'For early-stage teams and founders',
        price: 199,
        period: 'per hour',
        items: [
          {
            description: 'GitOps & Kubernetes stack tuning',
          },
          {
            description: 'Observability - Monitoring, alerting, dashboards and traces.',
          },
          {
            description: 'Cost optimization',
          },
          {
            description: 'High-trust guidance on infrastructure design',
          },
          {
            description: 'Infrastructure as Code (IaC) and Automation',
          },
          {
            description: 'Backup strategies',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Project Engagements',
        subtitle: 'Fixed-scope infrastructure and development projects',
        price: 5000,
        period: 'Starting at',
        items: [
          {
            description: 'Defined deliverables',
          },
          {
            description: 'Timeline and milestones',
          },
          {
            description: 'We simplify, implement, and document your platform',
          },
          {
            description: 'Documentation and post-handoff support',
          },

          {
            description: 'Optional self-hosted or cloud-native stack builds',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
      {
        title: 'Ongoing Partnership',
        subtitle: 'Optimal choice for companies',
        price: 16000,
        period: 'starting at (per month)',
        items: [
          {
            description: 'Monthly advisory or hands-on engagement',
          },
          {
            description: 'Discord/Slack/email support + quarterly audits',
          },
          {
            description: 'Available after project-based collaboration',
          },
          {
            description: 'Advisory retainer',
          },
          {
            description: 'Training and support',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing our plans"
    columns={2}
    items={[
      {
        title: '🧭 Transparent from the Start',
        description: 'No hidden fees. No “gotchas.” You’ll always know what you’re getting — and why it matters.',
        icon: 'tabler:stairs',
      },
      {
        title: '⚙️ Flexible Engagement Options',
        description: 'Hourly, project-based, or long-term — we meet you where you are. Start small and scale as needed.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: '📘 Clear Deliverables',
        description: 'Every project includes documentation, diagrams, and next steps — no black boxes or tribal knowledge.',
        icon: 'tabler:shield-lock',
      },
      {
        title: '🤝 Steady Support',
        description: `We offer optional support agreements after delivery — or just help you build it right the first time.`,
        icon: 'tabler:accessible',
      },
      {
        title: '📦 Own What We Build',
        description: 'You get everything — code, configs, SOPs, backups. No vendor lock-in, no strings attached.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '💡 Built-in Mentorship (Optional)',
        description: 'Want your team or students to learn as we build? We love to teach along the way.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

