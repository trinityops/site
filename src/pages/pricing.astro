---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
// import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Engagement Options That Fit Your Team"
    subtitle="From hourly consulting to long-term support, we price based on clarity, not complexity."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our Prices"
    subtitle="Flexible options for teams of all sizes"
    prices={[
      {
        title: 'Short-Term Engagement',
        subtitle: 'Ideal for evaluations, guidance, or short-form execution',
        price: 199,
        period: 'per hour',
        items: [
          { description: 'GitOps & Kubernetes stack tuning' },
          { description: 'Observability: monitoring, alerting, dashboards' },
          { description: 'High-trust guidance on infrastructure design' },
          { description: 'Infrastructure as Code (IaC) and automation' },
          { description: 'Cost optimization and backup strategies' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '/contact',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Fixed-Scope Project',
        subtitle: 'Perfect for well-defined infrastructure or platform builds',
        price: 4999,
        period: 'Starting at',
        items: [
          { description: 'Includes everything in Short-Term Engagement' },
          { description: 'Defined deliverables and milestone timelines' },
          { description: 'End-to-end implementation with documentation' },
          { description: 'Cloud-native or self-hosted stack setup' },
          { description: 'Handoff support and knowledge transfer' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '/contact',
        },
      },
      {
        title: 'Ongoing Partnership',
        subtitle: 'Designed for long-term engagements and advisory retainers',
        price: '9999',
        period: 'starting at (per month)',
        items: [
          { description: 'Includes all features from previous tiers' },
          { description: 'Monthly or multi-year strategic collaboration' },
          { description: 'Multiple projects, evolving needs, or advisory' },
          { description: 'Slack/Discord/email support + quarterly audits' },
          { description: 'Ongoing training, platform scaling, and mentoring' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Contact Us',
          href: '/contact',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing our plans"
    columns={2}
    items={[
      {
        title: 'Transparent from the Start',
        description: 'No hidden fees. No “gotchas.” You’ll always know what you’re getting — and why it matters.',
        icon: 'tabler:layers-selected',
      },
      {
        title: 'Flexible Engagement Options',
        description:
          'Hourly, project-based, or long-term — we meet you where you are. Start small and scale as needed.',
        icon: 'tabler:adjustments-alt',
      },
      {
        title: 'Clear Deliverables',
        description:
          'Every project includes documentation, diagrams, and next steps — no black boxes or tribal knowledge.',
        icon: 'tabler:checklist',
      },
      {
        title: 'Steady Support',
        description: `We offer optional support agreements after delivery — or just help you build it right the first time.`,
        icon: 'tabler:headset',
      },
      {
        title: 'Own What We Build',
        description: 'You get everything — code, configs, SOPs, backups. No vendor lock-in, no strings attached.',
        icon: 'tabler:tool',
      },
      {
        title: 'Built-in Mentorship (Optional)',
        description: 'Want your team or students to learn as we build? We love to teach along the way.',
        icon: 'tabler:user-up',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->
